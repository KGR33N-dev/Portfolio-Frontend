---
import Item from '~/components/blog/GridItem.astro';
import type { Post } from '~/types/blog';

export interface Props {
  posts: Array<Post>;
  lang?: string;
}

const { posts, lang = 'en' } = Astro.props;
---

<div class="grid gap-6 row-gap-5 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 -mb-6">
  {posts.map((post) => <Item post={post} lang={lang} />)}
</div>
