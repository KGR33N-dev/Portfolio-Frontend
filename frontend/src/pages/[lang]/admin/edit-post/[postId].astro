  function getLanguageName(code) {
    const lang = availableLanguages.find(l => l.code === code);
    return lang ? lang.native_name : code.toUpperCase();
  }

  function formatDate(dateString) {
    if (!dateString) return '';
    return new Date(dateString).toLocaleString();
  }

  function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }

  function previewPost(slug) {
    const currentLang = window.location.pathname.split('/')[1];
    
    if (currentPost.is_published) {
      // For published posts, use the regular blog URL
      const previewUrl = `/${currentLang}/blog/${slug}`;
      window.open(previewUrl, '_blank');
    } else {
      // For draft posts, we need to implement a preview mode
      // You could either:
      // 1. Add preview=true parameter to the blog page and modify it to handle drafts
      // 2. Create a separate preview page for drafts
      // 3. Show a temporary preview in a modal/new window
      
      // For now, try to open the blog post with a preview parameter
      // This would require updating the blog/[slug].astro page to handle preview mode
      const previewUrl = `/${currentLang}/blog/${slug}?preview=true&admin_token=${AdminAuth.getToken()}`;
      
      // Show a warning that this is a draft preview
      if (confirm('This is a draft post that may not be publicly visible. Do you want to continue with preview?')) {
        window.open(previewUrl, '_blank');
      }
    }
  }

  function showError(message) {
    // Try to use notification system, fallback to inline message
    if (window.NotificationManager) {
      window.NotificationManager.error(message);
    } else {
      // Fallback to inline error display
      const errorDiv = document.getElementById('error-message');
      const successDiv = document.getElementById('success-message');
      
      if (errorDiv) {
        errorDiv.textContent = message;
        errorDiv.classList.remove('hidden');
      }
      if (successDiv) {
        successDiv.classList.add('hidden');
      }
    }
  }

  function showSuccess(message) {
    // Try to use notification system, fallback to inline message
    if (window.NotificationManager) {
      window.NotificationManager.success(message);
    } else {
      // Fallback to inline success display
      const successDiv = document.getElementById('success-message');
      const errorDiv = document.getElementById('error-message');
      
      if (successDiv) {
        successDiv.textContent = message;
        successDiv.classList.remove('hidden');
      }
      if (errorDiv) {
        errorDiv.classList.add('hidden');
      }
    }
  }

  function updateActionButtons() {
    if (!currentPost) {
      console.warn('updateActionButtons: currentPost is null');
      return;
    }
    
    console.log('üîÑ Updating action buttons. Post published:', currentPost.is_published);
    
    const toggleBtn = document.getElementById('toggle-publish-btn');
    const toggleText = document.getElementById('toggle-publish-text');
    const publishIcon = document.getElementById('publish-icon');
    const statusBadge = document.getElementById('publish-status-badge');
    
    // Debug logging - show which elements are missing
    const elementsStatus = {
      toggleBtn: !!toggleBtn,
      toggleText: !!toggleText,
      publishIcon: !!publishIcon,
      statusBadge: !!statusBadge
    };
    
    console.log('üîç Button elements found:', elementsStatus);
    
    // Show more detailed info about missing elements
    if (!toggleBtn) console.error('‚ùå Missing element: toggle-publish-btn');
    if (!toggleText) console.error('‚ùå Missing element: toggle-publish-text');
    if (!publishIcon) console.error('‚ùå Missing element: publish-icon');
    if (!statusBadge) console.error('‚ùå Missing element: publish-status-badge');
    
    // Try to update what we can, even if some elements are missing
    const hasAllElements = toggleBtn && toggleText && publishIcon && statusBadge;
    
    if (!hasAllElements) {
      console.warn('updateActionButtons: Some elements missing, will retry in 200ms...');
      setTimeout(() => {
        console.log('üîÑ Retrying updateActionButtons...');
        updateActionButtons();
      }, 200);
      
      // But still try to update what we can find
      if (!toggleBtn) return; // Can't do anything without the main button
    }
    
    // Ensure button is enabled (unless currently submitting)
    if (!isSubmitting) {
      toggleBtn.disabled = false;
    }
    
    if (currentPost.is_published) {
      console.log('üì§ Setting up UNPUBLISH button');
      // Post is published - show unpublish button
      toggleBtn.setAttribute('data-action', 'unpublish');
      toggleBtn.className = 'px-6 py-3 bg-yellow-600 hover:bg-yellow-700 text-white rounded-lg font-medium transition-all duration-200 flex items-center';
      
      if (toggleText) {
        toggleText.textContent = translations.unpublishPost;
      }
      
      // Unpublish icon (X mark)
      if (publishIcon) {
        publishIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L18.364 5.636M5.636 18.364l12.728-12.728"></path>';
      }
      
      // Published status badge
      if (statusBadge) {
        statusBadge.textContent = translations.published;
        statusBadge.className = 'px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400';
      }
    } else {
      console.log('üìù Setting up PUBLISH button');
      // Post is draft - show publish button
      toggleBtn.setAttribute('data-action', 'publish');
      toggleBtn.className = 'px-6 py-3 bg-green-600 hover:bg-green-700 text-white rounded-lg font-medium transition-all duration-200 flex items-center';
      
      if (toggleText) {
        toggleText.textContent = translations.publishPost;
      }
      
      // Publish icon (checkmark)
      if (publishIcon) {
        publishIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>';
      }
      
      // Draft status badge
      if (statusBadge) {
        statusBadge.textContent = translations.draft;
        statusBadge.className = 'px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900/20 dark:text-yellow-400';
      }
    }
    
    console.log('‚úÖ Action buttons updated successfully');
    console.log('üéØ Final button state:', {
      action: toggleBtn.getAttribute('data-action'),
      text: toggleText ? toggleText.textContent : 'text element not found',
      class: toggleBtn.className
    });
  }

  function hideMessages() {
    const errorDiv = document.getElementById('error-message');
    const successDiv = document.getElementById('success-message');
    
    if (errorDiv) errorDiv.classList.add('hidden');
    if (successDiv) successDiv.classList.add('hidden');
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', initEditPost);
  document.addEventListener('astro:page-load', initEditPost);

  // Cleanup on page unload
  window.addEventListener('beforeunload', (e) => {
    if (hasUnsavedChanges && !isSubmitting) {
      e.preventDefault();
      e.returnValue = 'You have unsaved changes. Are you sure you want to leave?';
    }
  });
</script>
