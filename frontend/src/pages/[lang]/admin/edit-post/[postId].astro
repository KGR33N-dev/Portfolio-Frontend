  async function handleFormSubmit(action) {
    if (isSubmitting) return;
    
    isSubmitting = true;
    hideMessages();

    const activeBtn = document.querySelector(`button[data-action="${action}"]`);

    try {
      // Determine post ID to use
      const pathParts = window.location.pathname.split('/');
      const editPostIndex = pathParts.findIndex(part => part === 'edit-post');
      const urlPostId = editPostIndex !== -1 ? pathParts[editPostIndex + 1] : null;
      const actualPostId = urlPostId && !isNaN(parseInt(urlPostId)) ? parseInt(urlPostId) : null;
      const postIdToUse = (currentPost && currentPost.id) ? currentPost.id : actualPostId;
      
      if (!postIdToUse) {
        throw new Error('Unable to determine post ID');
      }
      
      // Collect form data
      const formData = collectFormData();
      if (!formData) {
        isSubmitting = false;
        return;
      }

      // Show loading state on button
      if (activeBtn) {
        activeBtn.disabled = true;
        const buttonText = activeBtn.querySelector('#toggle-publish-text') || activeBtn.querySelector('#save-text') || activeBtn.querySelector('span');
        
        if (buttonText) {
          if (action === 'save') {
            buttonText.textContent = translations.savingChanges;
          } else if (action === 'publish') {
            buttonText.textContent = translations.publishingPost;
          } else if (action === 'unpublish') {
            buttonText.textContent = translations.unpublishingPost;
          }
        }
      }

      // Update post
      const updateResponse = await AdminAuth.makeAuthenticatedRequest(
        API_URLS.updatePost(postIdToUse),
        {
          method: 'PUT',
          body: JSON.stringify(formData),
        }
      );

      if (!updateResponse.ok) {
        const errorData = await updateResponse.text();
        throw new Error(`Failed to update post: ${errorData}`);
      }

      const updatedPost = await updateResponse.json();
      currentPost = updatedPost;
      console.log('üìù Post updated. New state:', { id: currentPost.id, is_published: currentPost.is_published });

      // Handle publish/unpublish actions
      if (action === 'publish') {
        const publishResponse = await AdminAuth.makeAuthenticatedRequest(
          API_URLS.publishPost(postIdToUse),
          { method: 'PUT' }
        );

        if (!publishResponse.ok) {
          throw new Error(translations.errorPublishingPost);
        }

        currentPost = await publishResponse.json();
        console.log('üì§ Post published. New state:', { id: currentPost.id, is_published: currentPost.is_published });
        showSuccess(translations.postPublishedSuccessfully);
      } else if (action === 'unpublish') {
        const unpublishResponse = await AdminAuth.makeAuthenticatedRequest(
          API_URLS.unpublishPost(postIdToUse),
          { method: 'PUT' }
        );

        if (!unpublishResponse.ok) {
          throw new Error(translations.errorUnpublishingPost);
        }

        currentPost = await unpublishResponse.json();
        console.log('üìù Post unpublished. New state:', { id: currentPost.id, is_published: currentPost.is_published });
        showSuccess(translations.postUnpublishedSuccessfully);
      } else if (action === 'save') {
        showSuccess(translations.postUpdatedSuccessfully);
      }

      // Update UI immediately after successful action
      console.log('üîÑ Updating UI after action:', action);
      console.log('üéØ Current post state before UI update:', { id: currentPost.id, is_published: currentPost.is_published });
      updatePostStatusHeader();
      updateActionButtons();
      hasUnsavedChanges = false;
      updateAutoSaveIndicator();
      
      // Add brief visual feedback to show the change
      const toggleBtn = document.getElementById('toggle-publish-btn');
      if (toggleBtn) {
        toggleBtn.style.transform = 'scale(1.05)';
        setTimeout(() => {
          toggleBtn.style.transform = '';
        }, 200);
      }

    } catch (error) {
      console.error('Error handling form submission:', error);
      showError(error.message || translations.errorUpdatingPost);
    } finally {
      isSubmitting = false;
      console.log('üîÑ Finally block: isSubmitting set to false, restoring button states');
      
      // Restore button states immediately
      const saveBtn = document.getElementById('save-changes-btn');
      const toggleBtn = document.getElementById('toggle-publish-btn');
      const saveText = document.getElementById('save-text');
      
      // Re-enable all buttons
